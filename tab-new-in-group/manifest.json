{
    "manifest_version": 3,

    "name": "New Tab In Group",
    "description": "New tab in group.",
    "version": "0.0.1",

    "permissions": [
        "tabs",
        "tabGroups"
    ],
    

    "action": {
        "default_title": "Click to open a new tab"
    },
    "background": {
        "service_worker": "new_tab.js"
    },

    "icons": {
        "16": "img/plus16.png",
        "48": "img/plus48.png",
        "128": "img/plus128.png"
    }
}